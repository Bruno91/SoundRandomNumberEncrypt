<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bruno.randomgeneratorproyect">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="CryptoSoundRandomNumbers"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AudioActivity" />
        <activity android:name=".CryptoActivity" />
        <activity android:name=".NumberGenerateActivity" />
        <activity android:name=".ExplorerActivity" />
        <activity android:name=".EncryptMessageActivity" />
        <activity android:name=".DecryptMessageActivity" />
        <activity android:name=".KeyGenerateActivity" />
        <activity android:name=".RandomNumberGenerateActivity"></activity>
    </application>

</manifest>